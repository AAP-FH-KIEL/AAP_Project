    th, td{
        padding: 10px 30px;

    }
    .tab{
        margin-top: 50px;
        margin-left: 210px;
        margin-bottom: 50px;
    }
    h1{text-align: center; font-size: xx-large; font-weight: bolder; margin: 50px}
