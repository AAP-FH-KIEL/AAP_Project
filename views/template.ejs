      /*color: #fff;*/
    /*}*/

    /* Add a gray background color and some padding to the footer */

     .side-bar .nav-tabs{border-bottom:none;}
     .side-bar .nav-tabs .nav-link {color: #aeaeae; text-transform: uppercase; border: none;}
     .side-bar .nav-tabs .nav-link.active, .side-bar .nav-tabs .nav-link:hover{border-bottom:2px solid #ff0000;  text-transform: uppercase; color: #222}
     .sidebar-tabing .media{margin-top: 20px}
     .sidebar-tabing img{width: 120px;height: 100px;}
     .sidebar-tabing .title-small {line-height: 23px; margin-top: 5px; font-size: 18px}

    footer {
      background-color: #4d64ff;
      padding: 15px;
    }

    .carousel-inner img {
      width: 70%; /* Set width to 100% */
      margin: auto;
      min-height:200px;
    }

    /* Hide the carousel text when the screen is less than 600 pixels wide */
    @media (max-width: 600px) {
      .carousel-caption {
        display: none;
      }
    }
  </style>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/home">SportsFanz</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/home">Home</a></li>
        <li><a href="#">Highlights</a></li>
        <li><a href="#">Matches</a></li>
        <li><a href="#">Breaking New</a></li>
        <li><a href="#">Profile</a></li>
        <li><a href="#">Favourite</a></li>
        <li><a href="#">Games</a></li>
        <li><a href="#">Comparison</a></li>
        <li><a href="#">Articles</a></li>
      </ul>
      <div>
        <% if(!user){ %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span>Login</a></li>
            <li><a href="/signup"><span class="glyphicon glyphicon-sign-up"></span>Sign Up</a></li>
          </ul>
        <%} else{ %>
          <div class="nav navbar-nav navbar-right">
            <p>You're currently logged in as <%= user.username %>. Click <span><a href="/logout">here</a> to logout! </span></p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</nav>


